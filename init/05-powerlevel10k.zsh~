# For more see: https://github.com/bhilburn/powerlevel9k#prompt-customization

POWERLEVEL9K_MODE="awesome-fontconfig"
language_segments=(
    # Node.js
    #node_version
    #nodeenv
    #nvm
    #
    # PHP
    #php_version
    #laravel_version
    #symfony2_tests
    #symfony2_version
    #
    # Python
    virtualenv
    #anaconda
    #pyenv
    #
    # Ruby
    #chruby
    #rbenv
    #rspec_stats
    #rvm
    #
    #swift_version
    #rust_version
    #go_version
    #java_version
)

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(
    user                    # Your current username
    dir                     # Your current working directory
    vcs                     # Information about the current git repository
    $language_segments
    newline                 # Splits the prompt
    os_icon                 # Display a nice little icon, depending on your operating system
    root_indicator          # An indicator if the user has superuser status
)

POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(
    status                  # The return code of the previous command
    command_execution_time  # Display the time the current command took to execute
    root_indicator          # An indicator if the user has superuser status
    background_jobs         # Indicator for background jobs
    #host
    #history                # The command number for the current line
    #time                   # System time
)

unset language_segments

POWERLEVEL9K_SHORTEN_DIR_LENGTH=2
POWERLEVEL9K_DIR_SHOW_WRITABLE=true
